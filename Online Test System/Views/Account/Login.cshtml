@model Online_Test_System.Models.LoginViewModel
@{
    ViewBag.Title = "Login";
}
@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="container">
        <div class="page-header">
            <h1>Teacher Login</h1>
        </div>
        <!-- Simple Login - START -->
        <form class="col-md-12">
            <div class="form-group">
                <input type="text" class="form-control input-lg" placeholder="Email" id="Email" name="Email">
            </div>
            <div class="form-group">
                <input type="password" class="form-control input-lg" placeholder="Password" id="Password" name="Password">
            </div>
            <div class="form-group">
                <input type="password" class="form-control input-lg" placeholder="Confirm Password">
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-lg btn-block" onclick="loginTeacher()">Sign In</button>
                <span><a href="#">Need help?</a></span>
                <span class="pull-right"><a href="#">New Registration</a></span>
            </div>
        </form>
        <!-- Simple Login - END -->
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
